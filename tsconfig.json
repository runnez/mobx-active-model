{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./lib/",
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "esModuleInterop": true
  },
  "include": ["./src/*.ts"]
}
